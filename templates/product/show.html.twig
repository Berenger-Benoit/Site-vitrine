{% extends "base.html.twig" %}

{% block body %}
<h2>{{category.name}}</h2>
<div class="row">
    <div class="col-lg-12 col-md-12">

        <div class="product-content">
            <div class="image-content">
                
                <img class="product-image" src="https://images.unsplash.com/photo-1507732052797-d22258ac2f96?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="">{{product.image}}
            </div>
            <div class="title-product">
               <h3>{{product.name}}</h3>
            </div>
          
            <div class="product-origin">
                <span class="product-title">Origine:</span>
                <p>
                    {{product.origin}}
                </p> 
            </div>
            <div class="product-weight">
                <span  class="product-title">Poids:</span> 
                <p>
                    {{product.weight}} kg
                </p> 
            </div>
            <div class="product-price">
                <span  class="product-title">Prix:</span>
                <p>
                    {{product.price}} â‚¬
                </p> 
            </div>
           
          

        </div>
        <div class="link-back">

            <a href="{{path('products', {'id': category.id})}}" class="btn btn-primary">Retour aux produits</a>
        </div>
    </div>

</div>
{% endblock %}