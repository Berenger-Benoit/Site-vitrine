{% extends 'base.html.twig' %}

{% block title %}Nouveau compte{% endblock %}

{% block body %}
<h1>Création d'un compte</h1>

<div id="form" class="row">
    <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="form-card">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe' }) }}
            {{ form_row(registrationForm.agreeTerms, {'label': 'Accepter les conditions' }) }}
            <div class="button">
                <input class="btn btn-primary" type="submit" value="Créer le compte">
            </div>
        
            {{ form_end(registrationForm) }}

        </div>
    </div>
</div>


{% endblock %}